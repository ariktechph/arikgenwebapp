

  <div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>IMEI</th>
        <th>Brand</th>
        <th>Model</th>
        <th>Device type</th>
        <th>RAM</th>
        <th>Built in memory</th>
        <th>Battery</th>
        <th>Operating system</th>
        <th>Chipset</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>


      <% @devicedetails.each do |devicedetail| %>
      <tr>
        <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;"><%= devicedetail.imei %></td>
        <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;"><%= devicedetail.brand %></td>
        <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;"><%= devicedetail.model %></td>
        <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;"><%= devicedetail.device_type %></td>
        <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;"><%= devicedetail.ram %></td>
        <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;"><%= devicedetail.built_in_mem %></td>
        <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;"><%= devicedetail.battery %></td>
        <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;"><%= devicedetail.op_sys %></td>
        <td style="word-wrap: break-word;min-width: 160px;max-width: 160px;"><%= devicedetail.chipset %></td>
        <td><%= link_to 'Show', devicedetail %></td>
        <td><%= link_to 'Edit', edit_devicedetail_path(devicedetail) %></td>
        <td><%= link_to 'Delete', devicedetail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


