
<h1>Our Products</h1>
<br/>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Product</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
      <% if user_signed_in? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @ourproducts.each do |ourproduct| %>
      <tr>
        <td><%= ourproduct.prod_name %></td>
        <td><%= ourproduct.prod_price %></td>
        <td><%= ourproduct.prod_description %></td>
        <td><%= image_tag 'https://drive.google.com/uc?id=' + + ourproduct.prod_image, class: "img-responsive img-thumbnail" %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_ourproduct_path(ourproduct), class:'btn btn-outline-primary' %></td>
          <td><%= link_to 'Delete', ourproduct, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'Add product', new_ourproduct_path, class:'btn btn-primary' %>
<% end %>
